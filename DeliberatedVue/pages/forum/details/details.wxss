.userBox{
    height: 80rpx; 
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: #d4d4d8 solid 5rpx;
}
.userBox .userInform{
    height: 75rpx;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.userBox .userInform .headpicBox{
    height: 60rpx; 
    width: 80rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}
.userBox .userInform .headpicBox image{
    height: 100%;
}

.locateBox{
    height: 135rpx;
    width: 100%;
    border-bottom: #bbbbbb solid 5rpx;
    display: flex;
    align-items: center;
}
.locateBox .outLocate{
    height: 80rpx;
    width: 390rpx;
    border-radius: 40rpx;
    background-color: #c3e8d8;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    right: 10rpx;
}
.locateBox .outLocate text{
    margin-right: 20rpx;
    margin-bottom: 5rpx;
}
.locateBox .outLocate image{
    margin-left: 10rpx;
    height: 65rpx;
}

.textBodyBox{
    width: 86%;
    margin-left: 7%;
    margin-bottom: 20rpx;
}

.fillBox{
    height: 15rpx;
}
.taberBoxBlock{
    height: 60rpx;
    background-color: #f6f6f6;
    position: relative;
    display: flex;
    align-items: center;
    border-radius: 35rpx;
    border: 3rpx solid #dddddd;
}
.taberBoxBlock .taberBox{
    height: 50rpx;
    right: 12rpx;
    bottom: 5rpx;
    position: absolute;
    display: flex;
    flex-direction: row;
}
.taberBoxBlock .taberBox .outTaber{
    height: 46rpx;
    width: 135rpx;
    display: flex;
    flex-direction: row;
}
.taberBoxBlock .taberBox .outTaber .taberIconBox{
    height: 100%;
    width: 60rpx;
    display: flex;
    justify-content: center;
}
.taberBoxBlock .taberBox .outTaber .taberIconBox image{
    height: 100%;
}
.taberBoxBlock .taberBox .outTaber .taberTextBox{
    font-size: medium;
}

.commentContainer{
    width: 94%;
    margin-left: 3%;
    margin-top: 25rpx;
}
.commentContainer .containerBox{
    margin-bottom: 20rpx;
}
.commentContainer .containerBox .commenterBox{
    height: 80rpx; 
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.commentContainer .containerBox .commenterBox .commenterInform{
    height: 75rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.commentContainer .containerBox .commenterBox .commenterInform .headpicBox{
    height: 60rpx; 
    width: 80rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}
.commentContainer .containerBox .commenterBox .commenterInform .headpicBox image{
    height: 100%;
}
.commentContainer .containerBox .commenterBox .likeNum{
    width: 120rpx;
    height: 70%;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.commentContainer .containerBox .commenterBox .likeNum image{
    height: 100%;
}
.commentContainer .containerBox .commentContent{
    margin-left: 80rpx;
    font-size: small;
}

.comInputBox{
    height: 100rpx;
    width: 100%;
    background-color: white;
    position: fixed;
    bottom: 0;
    border-top: 2rpx solid #bbbbbb;
    display: flex;
    flex-direction: row;

}
.comInputBox .inputBox{
    margin-left: 3%;
    margin-right: 1%;
    margin-top: 15rpx;
    width: 75%;
    height: 70rpx;
    background-color: #f8f8f8;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
}
.comInputBox .comIconBox{
    width: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.comInputBox .comIconBox image{
    height: 64rpx;
}